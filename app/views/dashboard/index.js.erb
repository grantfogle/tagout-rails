// Append new rows to the table
document.getElementById('draw-results').insertAdjacentHTML('beforeend', '<%= j render(partial: "table_rows", locals: { draw_results: @draw_results, filters: @filters, max_points: @max_points }) %>');

// Update the results summary
document.querySelector('.results-summary p').textContent = 'Showing <%= @showing_count %> of <%= @total_count %> hunt codes';

<% if @has_more %>
  // Update the Load More button with the next page
  var loadMoreBtn = document.getElementById('load-more-btn');
  loadMoreBtn.href = '<%= dashboard_path(page: @next_page, filters: @filters) %>';
  loadMoreBtn.textContent = 'Load More';
  loadMoreBtn.removeAttribute('disabled');
<% else %>
  // No more results, remove the Load More button
  var container = document.getElementById('load-more-container');
  if (container) {
    container.remove();
  }
<% end %>
