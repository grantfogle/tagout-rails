<div class="feedback" id="feedback-widget">
  <button class="feedback__toggle" type="button" onclick="this.parentElement.classList.toggle('feedback--open')">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
    </svg>
    <span>Feedback</span>
  </button>
  
  <div class="feedback__panel">
    <h3 class="feedback__title">Send Feedback</h3>
    <p class="feedback__subtitle">Help us improve Tagout</p>
    
    <%= form_with url: feedbacks_path, class: "feedback__form", method: :post, local: true do |f| %>
      <div class="feedback__field">
        <%= f.label :email, "Email (optional)" %>
        <%= f.email_field :email, placeholder: "your@email.com" %>
      </div>
      
      <div class="feedback__field">
        <%= f.label :comment, "Your feedback" %>
        <%= f.text_area :comment, placeholder: "What would you like to see improved?", required: true, rows: 4 %>
      </div>
      
      <div class="feedback__actions">
        <%= f.submit "Send Feedback", class: "button button--primary button--contained" %>
      </div>
    <% end %>
  </div>
</div>
